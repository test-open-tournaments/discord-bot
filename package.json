{
	"name": "test-open-bot",
	"module": "src/index.ts",
	"type": "module",
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"start": "bun src/index.ts",
		"format": "biome format --write ./",
		"lint": "biome lint ./",
