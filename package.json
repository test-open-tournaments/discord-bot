	},
	"dependencies": {
		"@supabase/supabase-js": "^2.43.4",
		"chalk": "^5.3.0",
		"dayjs": "^1.11.11",
		"discord.js": "^14.15.2",
		"valibot": "^0.30.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.7.3",
		"@types/bun": "^1.1.3",
		"supabase": "^1.169.8",
		"typescript": "^5.4.5"
	}
}
